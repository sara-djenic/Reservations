@model IEnumerable<Ispit_asp.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers:</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.CustomerName, "Edit", "Customer", new { id = customer.CustomerId }, null)
                    </td>
                    <td>@customer.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}

